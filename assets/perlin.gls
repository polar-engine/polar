@uniform Point2 u_resolution
@uniform Mat4 u_view
@uniform Mat4 u_projection
@uniform Mat4 u_invViewProj
@uniform uint u_time
@uniform float u_period
@uniform Point3 u_exposure

@uniform Decimal u_baseDetail
@uniform Decimal u_grain
@uniform Decimal u_farFocus
@uniform Decimal u_farLimiter
@uniform Decimal u_pixelFactor
@uniform Decimal u_voxelFactor
@uniform Decimal u_scanIntensity

@uniform Decimal u_threshold
@uniform vec3    u_waveParams
@uniform vec3    u_worldScale
@uniform vec3    u_color

@attrib vec2 a_vertex

@varying smooth vec2 v_vertex

@gin depth u_depthBuffer
@out rgba8 color o_color

@shader vertex

void main() {
	gl_Position = vec4(a_vertex, 0.0, 1.0);
	v_vertex = a_vertex;
}

@shader fragment

Decimal InverseDepth(in Decimal linear) {
	const Decimal f = 48.0;
	const Decimal n = 0.1;
	Decimal z = (f + n - 2 * n / linear) / (f - n);
	return z;
}

Decimal Depth(in vec2 texCoord) {
	const Decimal f = 48.0;
	const Decimal n = 0.1;
	Decimal z = (2 * n) / (f + n - texture(u_depthBuffer, texCoord).r * (f - n));
	return z;
}

vec3 mod289(vec3 x) {
	return x - floor(x * (1.0 / 289.0)) * 289.0;
}

Point4 mod289(Point4 x) {
	return x - floor(x * (1.0 / 289.0)) * 289.0;
}

Point4 permute(Point4 x) {
	return mod289(((x*34.0)+1.0)*x);
}

Point4 taylorInvSqrt(Point4 r) {
	return 1.79284291400159 - 0.85373472095314 * r;
}


