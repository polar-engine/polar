#version 150
precision highp float;

@vertex

uniform mat4 u_projection;
uniform mat4 u_modelView;
in vec4 a_vertex;

void main() {
	vec4 modelViewVertex = u_modelView * a_vertex;
	gl_Position = u_projection * modelViewVertex;
}

@fragment

out vec4 o_color;

void main() {
	o_color = vec4(1.0, 0.0, 0.0, 1.0);
}
